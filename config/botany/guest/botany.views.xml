                <row>
                    <cell type="label" labelfor="6"/>
                    <cell type="field" id="6" name="remarks" uitype="textareabrief" rows="2" colspan="8"/>
                </row>
                <row>
                    <cell type="subview" viewname="Collectors" id="5" name="collectors" colspan="10" rows="3"/>
                </row>
            </rows>
        </viewdef>
        
        <viewdef
            type="form"
            name="CollectingEvent"
            class="edu.ku.brc.specify.datamodel.CollectingEvent"
            gettable="edu.ku.brc.af.ui.forms.DataGetterForObj"
            settable="edu.ku.brc.af.ui.forms.DataSetterForObj">
            <desc><![CDATA[Collecting Event]]></desc>
            
            <columnDef>100px,2px,158px,5px,100px,2px,220px,240px,15px,p:g</columnDef>
            <columnDef os="lnx">115px,2px,170px,5px,110px,2px,220px,293px,15px,p:g</columnDef>
            <columnDef os="mac">130px,2px,200px,5px,100px,2px,255px,363px,15px,p:g</columnDef>
            <columnDef os="exp">p,2px,200px,5px,100px,2px,p,p:g,p</columnDef>
